{
  "name": "@d3p1/lib-ts-react-template",
  "version": "1.0.0",
  "description": "A template to build a library using TypeScript with a Vanilla and React entry points",
  "private": false,
  "type": "module",
  "main": "./dist/core.js",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react.js"
      }
    }
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "lint:spelling": "write-good --no-passive",
    "lint:code": "eslint --ignore-path .gitignore --ext .js,.ts src",
    "lint:code:fix": "npm run lint:code -- --fix",
    "format:code": "prettier --ignore-path .gitignore --check src",
    "format:code:fix": "npm run format:code -- --write",
    "refactor": "npm run format:code:fix && npm run lint:code:fix",
    "build": "tsc && vite build",
    "dev": "vite",
    "prepublishOnly": "npm ci && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d3p1/lib-ts-react-template.git"
  },
  "author": "C. M. de Picciotto <d3p1@d3p1.dev> (https://d3p1.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d3p1/lib-ts-react-template/issues"
  },
  "homepage": "https://github.com/d3p1/lib-ts-react-template#readme",
  "keywords": [],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@d3p1/commitlint-config": "^1.0.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^8.0.3",
    "prettier": "3.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.3",
    "write-good": "^1.0.8"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
